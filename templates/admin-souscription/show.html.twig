{% extends 'base-admin.html.twig' %}

{% block title %}Contrat
{% endblock %}

{% block body %}
	<h1>Détails du contrat de
		{{contrat.prenom}}</h1>

	<div class="user_arry">
		<div class="main_user">
			<div class="card">
				<div class="card-body">
					<a href="{{ path('app_souscription_edit', {'id': contrat.id}) }}">
						<i class="fa fa-pen fa-xs edit"></i>
					</a>
					<table>
						<tbody>
							<tr>
								<td>ID</td>
								<td>{{ contrat.id }}</td>
							</tr>
							<tr>
								<td>Contrat</td>
								<td>
									<p>
										<a href="{{ asset('/assets/uploads/contrats/' ~ contrat.pdfNoFirm) }}" target='blank' style="color:blue;">Visualiser le contrat</a>
										<a role="button" href="{{ path('app_souscription_signature', {'id': contrat.id}) }}">
											<svg xmlns="http://www.w3.org/2000/svg" viewbox="0 0 512 512" width="20px" height=" 20px" class="svg_admin_orange"><path d="M498.1 5.6c10.1 7 15.4 19.1 13.5 31.2l-64 416c-1.5 9.7-7.4 18.2-16 23s-18.9 5.4-28 1.6L284 427.7l-68.5 74.1c-8.9 9.7-22.9 12.9-35.2 8.1S160 493.2 160 480V396.4c0-4 1.5-7.8 4.2-10.7L331.8 202.8c5.8-6.3 5.6-16-.4-22s-15.7-6.4-22-.7L106 360.8 17.7 316.6C7.1 311.3 .3 300.7 0 288.9s5.9-22.8 16.1-28.7l448-256c10.7-6.1 23.9-5.5 34 1.4z"/></svg>
										</a>
									</p>

								</td>
							</tr>
							<tr>
								<td>Civilite</td>
								<td>{{ contrat.civilite }}</td>
							</tr>
							<tr>
								<td>Nom</td>
								<td>{{ contrat.nom }}</td>
							</tr>
							<tr>
								<td>Date de Naissance</td>
								<td>{{ contrat.dateNaissance }}</td>
							</tr>
							<tr>
								<td>Nom de Naissance</td>
								<td>{{ contrat.nomNaissance }}</td>
							</tr>
							<tr>
								<td>Pays de Naissance</td>
								<td>{{ contrat.paysNaissance }}</td>
							</tr>
							<tr>
								<td>Email</td>
								<td>{{ contrat.email }}</td>
							</tr>
							<tr>
								<td>Adresse</td>
								<td>{{ contrat.adresse }}</td>
							</tr>
							<tr>
								<td>Code Postale</td>
								<td>{{ contrat.codePostale }}</td>
							</tr>
							<tr>
								<td>Ville</td>
								<td>{{ contrat.ville }}</td>
							</tr>
							<tr>
								<td>Telephone</td>
								<td>{{ contrat.telephone }}</td>
							</tr>
							<tr>
								<td>Situation</td>
								<td>{{ contrat.situation }}</td>
							</tr>
							<tr>
								<td>Numéro de la carte réserviste</td>
								<td>{{ contrat.nbReserviste }}</td>
							</tr>
							<tr>
								<td>Date de délivrance</td>
								<td>{{ contrat.dateDelivrance ? contrat.dateDelivrance|date('d-m-Y') : '' }}</td>
							</tr>
							<tr>
								<td>Date d'effet</td>
								<td>{{ contrat.dateGarantie ? contrat.dateGarantie|date('d-m-Y') : '' }}</td>
							</tr>
							{# <tr><td>SignatureId</td> #}
						{# <td>{{ contrat.signatureId }}</td> #}
							{# </tr> #}
							{# <tr> #}
							{# <td>DocumentId</td> #}
							{# <td>{{ contrat.documentId }}</td> #}
							{# </tr> #}
							{# <tr> #}
							{# <td>SignerId</td> #}
							{# <td>{{ contrat.signerId }}</td> #}
							{# </tr> #}
							{# <tr> #}
							{# <td>PdfNoFirm</td> #}
							{# <td>{{ contrat.pdfNoFirm }}</td> #}
							{# </tr> #}
						</tbody>
					</tr>
					<tr>
						<td>Pièce d'identité</td>
						<td>
							<a href="{{ asset('/assets/uploads/identite/' ~ contrat.reservisteFiles) }}" target="blank">
								<img src="{{ asset('/assets/uploads/identite/' ~ contrat.reservisteFiles) }}" alt="Photo illustrant l'assurance" width="150px" height="80px">
							</a>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
</div>
